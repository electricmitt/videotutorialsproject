
        <section class="notifications">
            <p class="notification-message">Message...</p>
        </section>

        <main>
            <div class="container">
                <h1 class="my-4">Course title : {{course.title}}
                </h1>

                <div class="row">

                    <div class="col-md-8">
                        <img class="img-fluid"
                            src="{{course.imageURL}}"
                            alt="{{course.title}}" />
                    </div>

                    <div class="col-md-4 text-center">
                        <h3 class="my-3">Course Description</h3>
                        <p>{{course.description}}</p>

                        {{#if isCreator}}
                            <a class="btn btn-danger" href="/delete/{{course._id}}">Delete</a>
                            <a class="btn btn-warning" href="/edit/{{course._id}}">Edit</a>
                    
                        {{else}}
                            {{#if enrolled}}
                                <span class="enrolled-span">You are already enrolled</span>
                        
                            {{else}}
                                <a class="btn btn-primary" href="/details/{{course._id}}/enroll">Enroll</a>
                            {{/if}}


                        {{/if}}

                    </div>
                </div>
            </div>
        </main>